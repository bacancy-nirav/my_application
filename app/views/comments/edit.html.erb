<%= form_for([@post ,@comment]) do |f| %>
<% if @comment.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @comment.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger">
      <li><%= msg %></li>
      </div>
    <% end %>
    </ul>
  </div>
<% end %>
  <p>
    <%= f.label :Comments %><br>
    <%= f.text_area :text, size: "2x3" %>
    <%= f.submit "Save" %>
  </p>

<% end %>
